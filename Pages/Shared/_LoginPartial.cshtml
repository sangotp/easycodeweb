@using Microsoft.AspNetCore.Identity
@using EasyCodeAcademy.Web.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link text-dark">
        Welcome @UserManager.GetUserName(User)!
    </a>
    <a asp-area="Identity" asp-page="/Account/Logout" class="nav-link text-dark">Log Out</a>
} else {
    <a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-dark">Register</a>
    <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-dark">Log In</a>
}

