@page
@model EasyCodeAcademy.Web.Pages.Authentication.Register.IndexModel
@{
    ViewData["Title"] = "EasyCode Academy - Register";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <link rel="icon" type="image/x-icon" href="/Assets/img/favicon.ico" />

    @*Site CSS*@
    <link rel="stylesheet" type="text/css" href="~/Assets/css/site.css" />

    @*Layout CSS*@
    <link rel="stylesheet" type="text/css" href="~/EasyCodeAcademy.Web.styles.css" />

    @*Font Awesome Kit*@
    <script src="https://kit.fontawesome.com/342629dbfe.js" crossorigin="anonymous"></script>

    @*SummerNote*@
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
</head>
<body>
    <div id="main">
        <div id="content">
            @*Start Main Content*@
            <div class="content__container">
                <div class="content-wrapper">
                    <div class="return-home-action">
                        <a href="/" class="return-home-action__link link-restart">
                            <i class="fa-solid fa-arrow-left-long"></i>
                        </a>
                    </div>
                    <div class="register-form-container">
                        <div class="register-form-title text-bold font-24">Sign Up</div>
                        <div class="register-form-content">
                            <form class="register-form" action="" method="post" enctype="application/x-www-form-urlencoded">
                                <div class="form-group form-group--flex mt-16">
                                    <div class="form-group-half mr-8 mt-16">
                                        <label for="first-name-input" class="register-form-label text-bold">First Name</label>
                                        <input type="text" maxlength="80" class="register-form-input mt-8" id="first-name-input" placeholder="Eg: Thanh" />
                                    </div>
                          
                                    <div class="form-group-half ml-8 mt-16">
                                        <label for="last-name-input" class="register-form-label text-bold">Last Name</label>
                                        <input type="text" maxlength="80" class="register-form-input mt-8" id="last-name-input" placeholder="Eg: Sang" />
                                    </div>
                                </div>
                                <div class="form-group mt-16">
                                    <label for="email-input" class="register-form-label text-bold">Email</label>
                                    <input type="email" maxlength="80" class="register-form-input mt-8" id="email-input" placeholder="Eg: example@gmail.com" />
                                </div>
                                <div class="form-group mt-16">
                                    <label for="user-name-input" class="register-form-label text-bold">UserName</label>
                                    <input type="text" maxlength="40" class="register-form-input mt-8" id="user-name-input" placeholder="Eg: johnnyK123" />
                                </div>
                                <div class="form-group mt-16">
                                    <label for="password-input" class="register-form-label text-bold">Password</label>
                                    <input type="password" class="register-form-input mt-8" id="password-input" placeholder="Eg: Special Character, Uppercase and Number" />
                                </div>
                                <div class="form-group mt-16">
                                    <label for="confirm-password-input" class="register-form-label text-bold">Confirm Password</label>
                                    <input type="password" class="register-form-input mt-8" id="confirm-password-input" placeholder="Repeat Your Password Input Above"/>
                                </div>
                                <div class="form-group mt-16">
                                    <label for="phone-input" class="register-form-label text-bold">Phone Number</label>
                                    <input type="text" maxlength="20" class="register-form-input mt-8" id="phone-input" placeholder="Eg: 0327833610" />
                                </div>
                                <div class="register-action mt-16">
                                    <span class="register-action__login">
                                        <a href="/Authentication/Login" class="login-link">Login Now</a>
                                    </span>
                                </div>
                                <div class="form-group mt-16 mb-8 text-center">
                                    <button type="submit" class="submit-register-form-btn btn-restart text-bold">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
