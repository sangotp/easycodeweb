@page
@model EasyCodeAcademy.Web.Pages.Authentication.Login.IndexModel
@{
    ViewData["Title"] = "EasyCode Academy - Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <link rel="icon" type="image/x-icon" href="/Assets/img/favicon.ico" />

    @*Site CSS*@
    <link rel="stylesheet" type="text/css" href="~/Assets/css/site.css" />

    @*Layout CSS*@
    <link rel="stylesheet" type="text/css" href="~/EasyCodeAcademy.Web.styles.css" />

    @*Font Awesome Kit*@
    <script src="https://kit.fontawesome.com/342629dbfe.js" crossorigin="anonymous"></script>

    @*SummerNote*@
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
</head>
<body>
    <div id="main">
        <div id="content">
            @*Start Main Content*@
            <div class="content__container">
                <div class="content-wrapper">
                    <div class="return-home-action">
                        <a href="/" class="return-home-action__link link-restart">
                            <i class="fa-solid fa-arrow-left-long"></i>
                        </a>
                    </div>
                    <div class="login-form-container">
                        <div class="login-form-title text-bold font-24">Sign In</div>
                        <div class="login-form-content">
                            <form class="login-form" action="" method="post" enctype="application/x-www-form-urlencoded">
                                <div class="form-group mt-16">
                                    <label for="user-name-input" class="login-form-label text-bold">UserName</label>
                                    <input type="text" maxlength="40" class="login-form-input mt-8" id="user-name-input" />
                                </div>
                                <div class="form-group mt-16">
                                    <label for="password-input" class="login-form-label text-bold">Password</label>
                                    <input type="password" class="login-form-input mt-8" id="password-input" />
                                </div>
                                <div class="login-action mt-16">
                                    <span class="login-action__register">
                                        <a href="/Authentication/Register" class="register-link">Register Now</a>
                                    </span>
                                    <span class="login-action__remember">
                                        <label for="checkbox-input" class="form-label-checkbox mr-8">Remember Me</label>
                                        <input type="checkbox" class="remember-form-checkbox" id="checkbox-input" />
                                    </span>
                                </div>
                                <div class="form-group mt-16 mb-8 text-center">
                                    <button type="submit" class="submit-login-form-btn btn-restart text-bold">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>