@page "/admin/users/addrole/{id}"
@model EasyCodeAcademy.Web.Areas.Admin.Pages.User.AddRoleModel
@{
    ViewData["Title"] = "Assign Role";

    // Create Selected List
    //List<string> roleName = new List<string>()
    //{
    //    "Element A",
    //    "Element B",
    //    "Element C"
    //};
    //var allRoles = new SelectList(roleName);
}

<h3>Assign Role for user: @Model.user.UserName</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleNames" class="form-label"></label>
                @Html.ListBoxFor(m => m.RoleNames, Model.allRoles, new {
                    id = "id-select-roles",
                    //@class = "form-control"
                    @class = "w-100"
                })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Update</button>
            <a asp-page="./Index" class="btn btn-lg btn-primary">Users List</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/Assets/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/Assets/lib/multiple-select/multiple-select.min.css"/>

    <script type="text/javascript">
        $("#id-select-roles").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
